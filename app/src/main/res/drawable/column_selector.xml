<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Khi cột được nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFE0B2"/> <!-- màu nhấn -->
        </shape>
    </item>

    <!-- Khi cột được chọn/focus (tùy muốn) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFCC80"/> <!-- màu chọn -->
        </shape>
    </item>

    <!-- Mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- màu nền bình thường -->
        </shape>
    </item>

</selector>

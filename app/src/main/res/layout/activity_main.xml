<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/ibtExpenseTracking"
        android:layout_width="104dp"
        android:layout_height="87dp"
        android:background="@drawable/bottom_button_selector"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/outline_account_balance_wallet_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.317"
        app:tint="#5FA5AB"
        tools:src="@drawable/outline_account_balance_wallet_24" />

    <ImageButton
        android:id="@+id/ibtBudgetSetting"
        android:layout_width="94dp"
        android:layout_height="89dp"
        android:background="@drawable/bottom_button_selector"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/outline_add_card_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315"
        app:tint="#5FA5AB"
        tools:src="@drawable/outline_add_card_24" />

    <TextView
        android:id="@+id/txBudgetSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget Setting"
        android:textColor="#5FA5AB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.811"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <ImageButton
        android:id="@+id/ibtExpenseOverview"
        android:layout_width="103dp"
        android:layout_height="99dp"
        android:background="@drawable/bottom_button_selector"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555"
        app:srcCompat="@drawable/outline_assignment_24"
        app:tint="#5FA5AB"
        tools:srcCompat="@drawable/outline_assignment_24" />

    <ImageButton
        android:id="@+id/ibtExpenseReports"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:background="@drawable/bottom_button_selector"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/outline_bar_chart_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754"
        app:tint="#5FA5AB"
        tools:src="@drawable/outline_bar_chart_24" />

    <TextView
        android:id="@+id/txExpenseReports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Reports"
        android:textColor="#5FA5AB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.809" />

    <ImageButton
        android:id="@+id/ibtRecurringExpenses"
        android:layout_width="101dp"
        android:layout_height="94dp"
        android:background="@drawable/bottom_button_selector"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        android:src="@drawable/outline_assignment_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543"
        app:tint="#5FA5AB"
        tools:src="@drawable/outline_assignment_add_24" />

    <TextView
        android:id="@+id/txRecurringExpenses"
        android:layout_width="132dp"
        android:layout_height="24dp"
        android:text="Recurring Expenses"
        android:textColor="#5FA5AB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629" />

    <TextView
        android:id="@+id/txExpenseOverview"
        android:layout_width="115dp"
        android:layout_height="23dp"
        android:text="Expense Overview"
        android:textColor="#5FA5AB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pick" />

    <ImageButton
        android:id="@+id/ibtSetting"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116"
        app:srcCompat="@drawable/outline_density_medium_24"
        app:tint="#5FA5AB"
        tools:srcCompat="@drawable/outline_density_medium_24" />

    <TextView
        android:id="@+id/txExpenseTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Tracking"
        android:textColor="#5FA5AB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/ibtHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/drawable"
            android:clickable="true"
            android:contentDescription="Home"
            android:focusable="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/outline_home_24" />

        <ImageButton
            android:id="@+id/ibtInfor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/drawable"
            android:clickable="true"
            android:contentDescription="Infor"
            android:focusable="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/outline_account_circle_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/totals_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/ibtSetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/txExpense"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:gravity="start|center_vertical"
            android:text="TextView" />
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#CCCCCC"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/txBudget"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:gravity="end|center_vertical"
            android:text="TextView" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>